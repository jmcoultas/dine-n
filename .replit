modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[objectStorage]
defaultBucketID = "replit-objstore-61e062ce-7b37-4380-ac44-c49bccd2f1ff"

[deployment]
deploymentTarget = "cloudrun"
ignorePorts = false
# Disable automatic npm install and use our cleanup script
installType = "none"
# Run cleanup script to remove shadcn-ui and install fresh dependencies
build = ["sh", "-c", "bash scripts/cleanup-deploy.sh && npm run build"]
run = ["sh", "-c", "NODE_ENV=production npm run start"]

[[ports]]
localPort = 3001
externalPort = 3000

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 3003

[[ports]]
localPort = 6006
externalPort = 3002

[[ports]]
localPort = 6007
externalPort = 3001

[workflows]
runButton = "Development"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Client"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=3001 tsx watch --clear-screen=false server/index.ts"
waitForPort = 3001

[[workflows.workflow]]
name = "Client"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npx vite --host 0.0.0.0 --port 5173"
waitForPort = 5173

[[workflows.workflow]]
name = "Development"
author = 37676718
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"

